rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function sessionIsActive(sessionId) {
      return get(/databases/$(database)/documents/sessions/$(sessionId)).data.status == 'ACTIVE';
    }

    match /sessions/{sessionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn()
        && resource.data.status == 'ACTIVE'
        && request.resource.data.status in ['ACTIVE', 'LOCKED'];
      allow delete: if false;

      match /people/{personId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && sessionIsActive(sessionId);
      }

      match /groups/{groupId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && sessionIsActive(sessionId);
      }

      match /items/{itemId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && sessionIsActive(sessionId);
      }

      match /receipts/{receiptId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && sessionIsActive(sessionId);
      }

      match /allocations/{allocationId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && sessionIsActive(sessionId);
      }
    }
  }
}
